<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="25dp"
    tools:context=".viewClassFragment.schedule_bottom_sheet">

    <TextView
        android:id="@+id/tv_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비대면"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#7A7A7A"
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/close_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/ic_union"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_style"
        />

    <TextView
        android:id="@+id/tv_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mm"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#597A8D"
        app:layout_constraintTop_toBottomOf="@id/tv_style"
        app:layout_constraintStart_toStartOf="@id/tv_style"/>

    <TextView
        android:id="@+id/String_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#597A8D"
        app:layout_constraintTop_toBottomOf="@id/tv_style"
        app:layout_constraintStart_toEndOf="@id/tv_month"/>

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dd"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#597A8D"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_style"
        app:layout_constraintStart_toEndOf="@id/String_month"/>

    <TextView
        android:id="@+id/String_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#597A8D"
        app:layout_constraintTop_toBottomOf="@id/tv_style"
        app:layout_constraintStart_toEndOf="@id/tv_day"/>


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        android:textSize="16sp"
        android:textColor="@color/mint"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/String_day"
        app:layout_constraintStart_toEndOf="@id/String_day"/>


</androidx.constraintlayout.widget.ConstraintLayout>